<Window x:Class="ViVeTool_GUI.Wpf.ManualFeatureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manual Feature Entry" 
        Height="220" 
        Width="450"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        TextOptions.TextFormattingMode="Display">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="Enter feature ID and desired state"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,15" />

        <!-- Feature ID Input -->
        <Label Grid.Row="1" Grid.Column="0" 
               Content="Feature ID:" 
               VerticalAlignment="Center" />
        <TextBox x:Name="FeatureIdTextBox" 
                 Grid.Row="1" 
                 Grid.Column="1"
                 Height="32"
                 Padding="8"
                 PreviewTextInput="NumericOnly_PreviewTextInput"
                 ToolTip="Enter the numeric feature ID (e.g., 123456)" />

        <!-- State Selection -->
        <Label Grid.Row="2" Grid.Column="0" 
               Content="Feature State:" 
               VerticalAlignment="Center"
               Margin="0,15,0,0" />
        <ComboBox Grid.Row="2" Grid.Column="1" 
                  x:Name="StateComboBox"
                  Height="32"
                  Margin="0,15,0,0"
                  Padding="8"
                  ToolTip="Select the desired state for the feature" />

        <!-- Error Message -->
        <TextBlock Grid.Row="3" Grid.ColumnSpan="2"
                   x:Name="ErrorMessageBlock"
                   Text=""
                   Foreground="Red"
                   FontSize="11"
                   TextWrapping="Wrap"
                   Margin="0,12,0,0"
                   MinHeight="20" />

        <!-- Buttons -->
        <StackPanel Grid.Row="4" 
                    Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,20,0,0"
                    Gap="10">
            <Button x:Name="OKButton"
                    Content="OK" 
                    Width="80" 
                    Height="36"
                    Click="OK_Click"
                    IsDefault="True" />
            <Button x:Name="CancelButton"
                    Content="Cancel" 
                    Width="80" 
                    Height="36"
                    Click="Cancel_Click"
                    IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>
